package com.belling.entites;

import java.math.BigDecimal;
import java.util.Date;

import javax.persistence.Id;
import javax.persistence.Transient;

public class Invoice {

    @Id
    private String id;
    private Date date;
    private BigDecimal amount;
    
    //une facture liée a un client on doit garder juste l'id client puique ce n'est pas de 
    //même service 
    private String customerID;
    
    @Transient //ce n'est persistence (entity) JPA devrait l'ignoré c'est juste pour stocké les donné vient d'un autre service 
    private Customer customer; 
    
    
}
